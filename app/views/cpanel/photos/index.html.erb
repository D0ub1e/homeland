<h1>Listing photos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.title %></td>
    <td><%= image_tag(photo.image.url) %></td>
    <td><%= photo.user.name %></td>
    <td><%= link_to 'Show', cpanel_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', cpanel_photo_path(photo), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate1 @photos %>
<br />

<%= link_to 'New Photo', new_cpanel_photo_path %>
